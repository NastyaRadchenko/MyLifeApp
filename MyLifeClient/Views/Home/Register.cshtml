@model MyLifeClient.Models.RegisterModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-md-10 offset-md-1 mt-4">
    <div class="text-center text-info mt-4 mb-3">
        <h5>Добро пожаловать</h5>
        <h5>───────────────────────────</h5>
    </div>
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Имя пользователя: </label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email: </label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Пароль: </label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Повторите пароль: </label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Подтвердить" class="btn btn-info mb-3" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}